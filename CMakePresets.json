{
	"version": 2,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 13,
        "patch": 0
    },
	"configurePresets": [
		{
			"name": "base",
			"hidden": true,
			"binaryDir": "${sourceDir}/build",
			"cacheVariables": {
				"CMAKE_EXPORT_COMPILE_COMMANDS": true
			}
		},
		{
			"name": "llvm",
			"displayName": "llvm",
			"inherits": [
				"base"
			],
			"generator": "Ninja Multi-Config",
			"cacheVariables": {
				"CMAKE_C_COMPILER": "clang"
			}
		},
		{
			"name": "gcc",
			"displayName": "gcc",
			"inherits": [
				"base"
			],
			"generator": "Ninja Multi-Config",
			"cacheVariables": {
				"CMAKE_C_COMPILER": "gcc"
			}
		}
	],
	"buildPresets": [
		{
			"name": "llvm - release",
			"configurePreset": "llvm",
			"configuration": "Release"
		},
		{
			"name": "llvm - debug",
			"configurePreset": "llvm",
			"configuration": "Debug"
		},
		{
			"name": "llvm - release with debug info",
			"configurePreset": "llvm",
			"configuration": "RelWithDebInfo"
		},
		{
			"name": "gcc - release",
			"configurePreset": "gcc",
			"configuration": "Release"
		},
		{
			"name": "gcc - debug",
			"configurePreset": "gcc",
			"configuration": "Debug"
		},
		{
			"name": "gcc - release with debug info",
			"configurePreset": "gcc",
			"configuration": "RelWithDebInfo"
		}
	]
}
